doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Books Login
    link(rel='stylesheet', href='css/login.css')

  body
    .login-box
      h1.login-title Books
      input#id(type='text', placeholder='Enter Your ID')
      input#password(type='password', placeholder='Password ')
      button#login-button Log In
      a#google-login(href='/auth/google') Log In With Google
      h3 OR
      button#signup-button Create Account
      script(src='javascript/login.js')